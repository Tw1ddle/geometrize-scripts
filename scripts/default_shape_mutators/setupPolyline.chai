def setupPolyline(shape) {
    var startingPoint = FloatPair(randomInRange(0, xMax), randomInRange(0, yMax - 1));

    for (var i = 0; i < 4; ++i) {
        var first = clamp(startingPoint.first + randomInRange(-32, 32), 0, xMax - 1);
        var second = clamp(startingPoint.second + randomInRange(-32, 32), 0, yMax - 1);
        var point = FloatPair(first, second);
        shape.m_points.push_back(point);
    }
}
